{
  "name": "tunes",
  "private": true,
  "version": "0.0.1",
  "description": "A HyperHTML version of PeepCode's Tunes",
  "author": "Djalma Jr. <djalmajr@gmail.com>",
  "license": "UNLICENSED",
  "main": "src/index.js",
  "contributors": [],
  "homepage": "https://github.com/djalmajr/tunes/tree/master#readme",
  "bugs": {
    "url": "https://github.com/djalmajr/tunes/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:djalmajr/tunes.git"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "scripts": {
    "commit": "git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "prettier": "prettier --write \"src/**/*.js\"",
    "deploy": "yarn build && gh-pages -d dist",
    "start": "cross-env NODE_ENV=development webpack-dev-server --mode=development",
    "build": "cross-env NODE_ENV=production webpack --mode=production",
    "build:dev": "cross-env NODE_ENV=development webpack --mode=development",
    "serve": "yarn build && live-server dist --open",
    "postversion": "git push && git push --tags",
    "version": "yarn changelog && git add CHANGELOG.md"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "hyperhtml-element": "^3.1.0",
    "mobx": "^5.5.2"
  },
  "devDependencies": {
    "autoprefixer": "^9.3.1",
    "babel-eslint": "^10.0.1",
    "clean-webpack-plugin": "^0.1.19",
    "commitizen": "^3.0.4",
    "conventional-changelog-cli": "^2.0.11",
    "copy-webpack-plugin": "^4.6.0",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.8.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-prettier": "^3.0.0",
    "file-loader": "^2.0.0",
    "gh-pages": "^2.0.1",
    "html-webpack-externals-plugin": "^3.8.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.1.3",
    "less": "^3.8.1",
    "less-loader": "^4.1.0",
    "lint-staged": "^8.0.4",
    "mini-css-extract-plugin": "^0.4.4",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.14.3",
    "style-loader": "^0.23.1",
    "webpack": "^4.24.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  }
}
